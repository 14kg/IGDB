        <div id = "commenter" class = "nes-container is-rounded">
            <h3>Write a review for this game.</h3>
            <form class = "form_form" id = "form_form" method="POST" action="/review">
                  <span style="margin: 5px 0 0 0">Title</span>
                  <input type = "text" placeholder = "Title" name="title">
                  <span style="margin: 5px 0 0 0">Rating</span>
                  <input type = "number" min="0" max="100" value="100" name="rating">
                  <p style="margin: 5px 0 0 0">Review</p>
                  <textarea name="review" rows="4" cols="96" placeholder="This game is great!"></textarea>
                  <br><button id = "submit">Submit</button>
            </form>
        </div>
      </div>

      <div id = "reviews" class = "nes-container is-rounded">
          <h3>Latest Reviews</h3><br>
          <a href="/review">Great game. Would recommend.</a>
      </div>

      
    </div>
  </body>
</html>
